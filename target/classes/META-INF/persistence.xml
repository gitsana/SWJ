<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="SWJ">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>com.swj.model.Question</class>
        <class>com.swj.model.Answer</class>

        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:postgresql://localhost:5432/postgres"/>
            <property name="eclipselink.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="eclipselink.jdbc.user" value="sana"/>
            <property name="eclipselink.jdbc.password" value="postgres88"/>
            <property name="eclipselink.logging.level" value="ALL"/>
        </properties>
    </persistence-unit>
</persistence>
